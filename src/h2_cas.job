#!/bin/sh
# Script genere automatiquement a partir de subgms
#
#$ -N h2_cas
#
#SBATCH --job-name=h2_cas
#SBATCH --cpus-per-task=8
#SBATCH --mem=3000
#***************************
#DO NOT MODIFY THESE OPTIONS
#SBATCH --nodes=1
#SBATCH --ntasks=1
#***************************


#$ -cwd
#$ -S /bin/sh
 hhomedir=`pwd`
 nnode=`hostname`
echo "--------SLURM EXECUTION------ -",date
echo "Variables"
echo "Running on        : $nnode  "
echo "targetdir         : $hhomedir "
echo "VBDIR            : /home/humbel/xmvb3_2/"
echo "TMPDIR            : $TMPDIR"
echo "I am in           : $PWD"
#echo "SLURM_JOB_ID :  ${SLURM_JOB_ID}"

# source /usr/share/Modules/init/sh
# save previous run
if [ -s h2_cas.orb ] ; then
 set  echo
   cp h2_cas.orb h2_cas.orb~
 unset  echo
fi
if [ -s h2_cas.xmo ] ; then
 set  echo
   cp h2_cas.xmo h2_cas.xmo~
 unset  echo
fi
if [ -s h2_cas.log ] ; then
 set  echo
   cp h2_cas.log h2_cas.log~
 unset  echo
fi

set echo
export OMP_NUM_THREADS=8
export OMP_STACKSIZE=3000M
cp  $HOMEDIR/h2_cas.xmi  $TMPDIR/h2_cas.xmi
if [ -s h2_cas.gus ] ; then
    cp  $HOMEDIR/h2_cas.gus  $TMPDIR/h2_cas.gus
else 
# use .orb as a .gus
    cp  $HOMEDIR/h2_cas.orb  $TMPDIR/h2_cas.gus
fi

cd $TMPDIR 
#time (/home/humbel/xmvb3_2//bin/preint                 h2_cas                      )
#pwd;ls -lrt |head -3
time (/home/humbel/xmvb3_2//bin/xmvb                   h2_cas                      )
pwd;ls -lrt |head -3
cd $HOMEDIR 
#time (rungms_                     h2_cas  1  > h2_cas.log)
# On doit rappatrier Ã  la main le .xmo et les wfn (si necessaire)
cp  $TMPDIR/h2_cas.orb  $HOMEDIR/
cp  $TMPDIR/h2_cas.xmo  $HOMEDIR/
cp  $TMPDIR/h2_cas.xdat  $HOMEDIR/
# join slurm and xmo
cat slurm-${SLURM_JOB_ID}.out h2_cas.xmo >> h2_cas.xmo
unset echo
